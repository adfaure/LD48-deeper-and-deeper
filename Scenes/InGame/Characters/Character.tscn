script/source = "extends KinematicBody2D

export (Vector2) var speed= Vector2(200,0)
var velocity = Vector2.ZERO
export (float) var gravity_scale = 5
export (Vector2) var jump_impulse= Vector2(0, -300)
export (Vector2) var rebound = Vector2(0,-150)


func _ready():
	pass # Replace with function body.

func _physics_process(delta):
	var snap = $PlatformDetector.cast_to

	if Input.is_action_just_pressed(\"ui_select\") and $PlatformDetector.is_colliding():
		snap = Vector2 (0,0)
		velocity.y= jump_impulse.y
	
	if Input.is_action_just_released(\"ui_select\"):
		velocity.y *= 0.7

	if Input.is_action_pressed(\"ui_right\"):
		velocity.x=speed.x

	elif Input.is_action_pressed(\"ui_left\"):
		velocity.x= -speed.x

	else:
		velocity.x=0
	
	# Interactions
	push_crates()

	var gravity= Vector2(0,98)
	velocity += gravity * delta * gravity_scale
	velocity = move_and_slide_with_snap(velocity,snap,Vector2.ZERO,true,4,0.9)

func push_crates():
	if $CrateDetectorRight.is_colliding():
		var object = $CrateDetectorRight.get_collider()
		if object.is_in_group(\"Boxes\") and velocity.x > 0:
			object.push(velocity / 10.0)

	if $CrateDetectorLeft.is_colliding():
		var object = $CrateDetectorLeft.get_collider()
		if object.is_in_group(\"Boxes\")  and velocity.x < 0:
			object.push(velocity / 10.0)
